<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/violet_blue"
            android:text="Joystick Robot"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_weight="1"
            android:letterSpacing="0.05"
            android:padding="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <TextView
            android:id="@+id/titleDevicesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Device:"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/deviceText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            app:backgroundTint="@color/hat_blue"
            app:strokeWidth="2dp"
            app:strokeColor="@color/violet_blue"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Status: Disconnected"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/hat_blue"
            android:text="Connect"
            android:textColor="@color/white"
            app:backgroundTint="@color/hat_blue"
            app:strokeWidth="2dp"
            app:strokeColor="@color/violet_blue"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <TextView
            android:id="@+id/options"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Options:"
            android:textColor="@color/black"/>

        <LinearLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/button1"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1"
                android:layout_margin="10dp"
                app:backgroundTint="@color/hat_blue"
                app:strokeWidth="2dp"
                app:strokeColor="@color/violet_blue"
                android:textColor="@color/white"
                android:enabled="false"/>

            <Button
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2"
                android:layout_margin="10dp"
                app:backgroundTint="@color/hat_blue"
                app:strokeWidth="2dp"
                app:strokeColor="@color/violet_blue"
                android:textColor="@color/white"
                android:enabled="false"/>

            <Button
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="3"
                android:layout_margin="10dp"
                app:backgroundTint="@color/hat_blue"
                app:strokeWidth="2dp"
                app:strokeColor="@color/violet_blue"
                android:textColor="@color/white"
                android:enabled="false"/>

            <Button
                android:id="@+id/button4"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="4"
                android:layout_margin="10dp"
                app:backgroundTint="@color/hat_blue"
                app:strokeWidth="2dp"
                app:strokeColor="@color/violet_blue"
                android:textColor="@color/white"
                android:enabled="false"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/joystick_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">

        <com.example.joystick.JoystickView
            android:id="@+id/joystickView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no"/>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/directionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Idle"
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/coordinateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="X: 0.00, Y: 0.00"
                android:textColor="@color/black"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
