<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E2E2"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/violet_blue"
            android:text="Joystick Robot"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_weight="1"
            android:letterSpacing="0.05"
            android:padding="12dp"/>

    </LinearLayout>

    <LinearLayout


        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:orientation="vertical">
        <!--android:layout_height="250dp"-->
        <TextView
            android:id="@+id/titleDevicesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bluetooth Device:"
            android:gravity="center"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/deviceText"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textColor="@color/black"

            />
        <Button
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Search"
            android:textColor="@color/white"
            android:backgroundTint="@color/hat_blue"
            />

        <TextView
            android:id="@+id/titleHT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sensor Reading:"
            android:textColor="@color/black"

            />

        <TextView
            android:id="@+id/deviceReading"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=""

            android:textColor="@color/black"
            android:textSize="15sp" />


        <Button
            android:id="@+id/connectButton"
            android:layout_width="110dp"
            android:layout_height="50dp"

            android:backgroundTint="@color/hat_blue"
            android:text="Connect"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/status"
            android:layout_width="297dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"

            android:gravity="center"
            android:text="Status: Disconnected"
            android:textColor="@color/black"
            />

    </LinearLayout>



    <LinearLayout

        android:id="@+id/joystick_layout"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
        <!--Joystick-->



        <com.example.joystick.JoystickView
            android:id="@+id/joystickView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:importantForAccessibility="no"/>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- DirecciÃ³n -->

            <!-- Coordenadas -->
            <TextView
                android:id="@+id/directionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-light"
                android:text="Idle"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/coordinateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:text="X: 0.00, Y: 0.00"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>